    <script src="http://d3js.org/d3.v4.min.js"></script>    
    <script>
	
	var projection = d3
		.geoMercator() //投影法の指定
		.scale(1000)	//スケール（ズーム）の指定
		.rotate([-0.25, 0.25, 0]) //地図を回転する　[x,y,z]
		.center([115.858889, -18.952222]); //中心の座標を指定
	

	var path = d3.geoPath().projection(projection);　
	
	
	var map = d3.select("body")
		.append("svg")
		.attr("width", 1200)
		.attr("height", 700); 

	d3.json("./img/countries.geo.json", drawMaps);
	

	function drawMaps(geojson) {
		map.selectAll("path")
			.data(geojson.features)
			.enter()
			.append("path")
			.attr("d", path)  //パスジェネレーターを使ってd属性の値を生成している
			.attr("fill", "white")
			.attr("fill-opacity", 0.5)
			.attr("stroke", "#222");    
	}

</script>


